<div id="home-page">

  <div class="header container">
    <h1 class="title text">Mood Track</h1>
  </div>

  <div class="content-container">
    <div class="fade-in instructions container">
      <p class="text">Log in to Spotify to get your Mood Track from your most recent listens. Alternatively, search for three songs that best represent your mood to get your Mood Track.</p>
    </div>

    <div class="fade-in container">
      <a
        href="/login"
        id="log-in-link"
        class="btn log-in text">Log in to Spotify</a>
    </div>

    <div class="fade-in divider container">
      <hr />
      <p class="text or">Or</p>
      <hr />
    </div>

    <div id="input-div" class="fade-in container">
      <form action="/submit" method="POST">
        <div class="input container">
          <input
            type="search"
            name="song_search_1"
            id="search-input-1"
            class="search"
            placeholder="Search for a song"
            required="true"
            >
          <input
            type="text"
            name="song_id_1"
            id="song_id_1"
            hidden="true">
        </div>
        <div id="search-result-1" class="search-result"></div>
        <div class="input container">
          <input
            type="search"
            name="song_search_2"
            id="search-input-2"
            class="search"
            placeholder="Search for a song"
            required="true"
            >
          <input
            type="text"
            name="song_id_2"
            id="song_id_2"
            hidden="true">
        </div>
        <div id="search-result-2" class="search-result"></div>
        <div class="input container">
          <input
            type="search"
            name="song_search_3"
            id="search-input-3"
            class="search"
            placeholder="Search for a song"
            required="true">
          <input
            type="text"
            name="song_id_3"
            id="song_id_3"
            hidden="true">
        </div>
        <div id="search-result-3" class="search-result"></div>
        <div class="input container">
          <input
            id="submit-btn"
            class="submit btn"
            type="submit"
            value="Get your Mood Track">
        </div>
      </form>
    </div>
  </div>

  <div class="footer container">
    <p class="text-small">Made with love by AML</p>
    <a
      href="https://github.com/LoopAM"
      target="_blank"
      >
      <img
        src="./assets/GitHub-Mark-64px.png"
        alt="The Github Logo"
        class="github-logo">
    </a>
  </div>

</div>

<script type="module" src="./js/home-page.js"></script>
